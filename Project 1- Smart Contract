pragma solidity ^0.8.0;

contract Smartcontract {
    uint256 public x = 20;
    uint256 public y = 10;

    function requireExample(uint256 _value) public pure returns (uint256) {
        require(_value <= 10, "Input value must be less than or equal to 10");
        return _value;
    }

    function assertExample() public view returns (uint256) {
        uint256 result = x + y;
        assert(result == 30);
        return result;
    }

    function revertExample() public pure returns (uint256) {
        uint256 a = 20;
        uint256 b = 10;
        if (b == 0) {
            revert("Divisor cannot be zero");
        }
        return a / b;
    }
}

