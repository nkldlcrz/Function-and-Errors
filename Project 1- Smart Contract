pragma solidity ^0.8.0;

contract MySmartcontract {

    uint256 public rate;

    function setRate(uint256 _newRate) external {
        require(_newRate > rate, "New rate must exceed current rate");
        rate = _newRate;
    }

 
    function checkRateIfifthy() external  view {
        assert(rate == 50);
    }

    function resetRate() external {
        if(rate == 0) {
            revert("Rate is already zero");
        }
        rate = 0;
    }
}
